<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:QQDatabaseExplorer.ViewModels"
        mc:Ignorable="d"
        Width="300"
        Height="200"
        x:Class="QQDatabaseExplorer.ExportDatabaseDialog"
        Title="ExportDatabaseDialog"
        CanMaximize="False"
        x:DataType="vm:ExportDatabaseDialogViewModel"
        WindowStartupLocation="CenterOwner">
  <Border Padding="4">
      <StackPanel Orientation="Vertical" Spacing="16">
          <DockPanel>
              <TextBlock Text="导出路径: " VerticalAlignment="Center" />
              <TextBox Text="{Binding ExportFilePath}" />
          </DockPanel>
          <ProgressBar Value="{Binding Progress}" />
          <Button Command="{Binding ExportCommand}" Content="开始导出" HorizontalAlignment="Center" />
      </StackPanel>
  </Border>
</Window>
